# ============================================
# Multi-Environment Configuration
# ============================================
# Copy this file to .env and update with your actual values
# DO NOT commit .env file to version control

# ============================================
# ENVIRONMENT SELECTOR
# ============================================
# Which environment to use: dev, staging, prod
# Can be overridden with: pytest --env=staging
TEST_ENV=dev

# ============================================
# DEVELOPMENT ENVIRONMENT
# ============================================
DEV_BASE_URL=https://dev.ecommerce-playground.lambdatest.io/index.php?route=account/login
DEV_TEST_EMAIL=dev-test@example.com
DEV_TEST_PASSWORD=DevPassword123!

# ============================================
# STAGING ENVIRONMENT
# ============================================
STAGING_BASE_URL=https://staging.ecommerce-playground.lambdatest.io/index.php?route=account/login
STAGING_TEST_EMAIL=staging-test@example.com
STAGING_TEST_PASSWORD=StagingPassword123!

# ============================================
# PRODUCTION ENVIRONMENT
# ============================================
PROD_BASE_URL=https://ecommerce-playground.lambdatest.io/index.php?route=account/login
PROD_TEST_EMAIL=prod-test@example.com
PROD_TEST_PASSWORD=ProdPassword123!